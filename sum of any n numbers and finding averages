#include <stdio.h>

int main() {
    int n, number, sum = 0;

    printf("Enter the value of n: ");
    scanf("%d", &n);

    for (int i = 1; i <= n; i++) {
        printf("Enter number %d: ", i);
        scanf("%d", &number);
        sum += number;
    }

    double average = (double)sum / n;

    printf("The sum of the numbers is %d\n", sum);
    printf("The average of the numbers is %.2lf\n", average);

    return 0;
}
